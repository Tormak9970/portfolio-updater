{
  "$schema": "..\\node_modules/@tauri-apps/cli\\schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Portfolio Updater",
    "version": "../package.json"
  },
  "tauri": {
    "allowlist": {
			"dialog": { "all": true },
			"path": { "all": true },
			"fs": {
				"all": true,
				"scope": [
					"$APP",
					"$APP/**",
					"$DESKTOP",
					"$DESKTOP/**",
					"$RESOURCE",
					"$RESOURCE/**",
					"$APPCONFIG",
					"$APPCONFIG/**",
					"$DATA",
					"$DATA/**",
					"$APPLOG",
					"$APPLOG/**",
					"$APPCACHE",
					"$APPCACHE/**"
				]
			},
			"protocol": {
				"all": true,
				"asset": true,
				"assetScope": [
					"$APP",
					"$APP/**",
					"$DESKTOP",
					"$DESKTOP/**",
					"$RESOURCE",
					"$RESOURCE/**",
					"$APPCONFIG",
					"$APPCONFIG/**",
					"$DATA",
					"$DATA/**",
					"$APPLOG",
					"$APPLOG/**",
					"$APPCACHE",
					"$APPCACHE/**"
				]
			},
			"window": {
				"all": true
			},
			"process": {
				"all": false,
				"exit": true
			}
		},
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": { "depends": [] },
      "externalBin": [],
      "icon": [ "icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico" ],
      "identifier": "dev.tormak.portfolio-updater",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost; style-src 'self' 'unsafe-inline'",
      "dangerousDisableAssetCspModification": ["style-src"]
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 750,
        "resizable": true,
        "title": "Portfolio Updater",
        "width": 1500,
        "decorations": false,
        "center": true
      }
    ]
  }
}